prefix		= @prefix@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@ -fPIC
LIBS    	= @LIBS@
INCLUDES 	= @INCLUDES@ -I. -I$(top_srcdir)/include 
CPPFLAGS  	= @CPPFLAGS@ $(INCLUDES)
SHELL		= /bin/sh

SRC     =  py_cligen.c py_cligen_cv.c py_cligen_cvec.c py_cligen_pt.c
OBJS    = $(SRC:.c=.o)
MODULE   = _cligen.so

all:	$(MODULE)

$(MODULE):	$(patsubst %,$(MODULE)(%),$(OBJS))

install:

clean:
	rm -f $(OBJS) $(MODULE) *.core 

distclean: clean
	rm -f Makefile



